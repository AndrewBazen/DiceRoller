<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DiceRoller.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500" Padding="4" 
        x:Class="DiceRoller.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DiceRoller"
        FontFamily="JetBrainsMono Nerd Font"
        Background="SeaGreen"
        CornerRadius="50">

  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainWindowViewModel/>
  </Design.DataContext>

 
  <StackPanel>
    <Border Margin="5" CornerRadius="10" Background="MediumSeaGreen" ClipToBounds="True">
      <TextBlock Margin="5"
                 FontSize="24"
                 HorizontalAlignment="Center"
                 Text="Dice Roller"
                 Foreground="Gold">
      </TextBlock>

    </Border>
    <StackPanel Width="300" Height="250" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 10, 0, 0">
      <TextBlock FontSize="24"
                 HorizontalAlignment="Center"
                 Foreground="Black">
      </TextBlock>
    </StackPanel>
    <Border Opacity="50" Width="610" Height="160" CornerRadius="10" Background="MediumSeaGreen">
      <Grid Margin="0"
            Width="600"
            Height="150"
            ColumnDefinitions="100, 100, 100, 100, 100, 100"
            HorizontalAlignment="Center">
        <Border Grid.Column="0" Margin="10,0,0,0"  Width="87" Height="100" CornerRadius="10" Background="DarkGreen">
          <Button Width="85" Margin="0, 0, 5,5" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="MediumSeaGreen" Click="Button_OnClick">
            <StackPanel>
              <Image Source="avares://DiceRoller/Assets/d4.png" Width="64" Height="64"/>
              <TextBlock HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontSize="16"
                         FontFamily="JetBrainsMono Nerd Font"
                          Foreground="Gold"
                         Text="D4"/>
            </StackPanel>
          </Button>
        </Border>
        <Border Grid.Column="1" Margin="10,0,0,0"  Width="87" Height="100" CornerRadius="10" Background="DarkGreen">
          <Button Width="85" Margin="0, 0, 5,5" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="MediumSeaGreen">
            <StackPanel>
              <Image Source="avares://DiceRoller/Assets/dice-six-faces-six.png" Width="64" Height="64"/>
              <TextBlock HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontSize="16"
                         FontFamily="JetBrainsMono Nerd Font"
                          Foreground="Gold"
                         Text="D6"/>
            </StackPanel>
          </Button>
        </Border>
        <Border Grid.Column="2" Margin="10,0,0,0"  Width="87" Height="100" CornerRadius="10" Background="DarkGreen">
          <Button Width="85" Margin="0, 0, 5,5" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="MediumSeaGreen">
            <StackPanel>
              <Image Source="avares://DiceRoller/Assets/dice-eight-faces-eight.png" Width="64" Height="64"/>
              <TextBlock HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontSize="16"
                         FontFamily="JetBrainsMono Nerd Font"
                          Foreground="Gold"
                         Text="D8"/>
            </StackPanel>
          </Button>
        </Border>
        <Border Grid.Column="3" Margin="10,0,0,0"  Width="87" Height="100" CornerRadius="10" Background="DarkGreen">
          <Button Width="85" Margin="0, 0, 5,5" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="MediumSeaGreen">
            <StackPanel>
              <Image Source="avares://DiceRoller/Assets/d10.png" Width="64" Height="64"/>
              <TextBlock HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontSize="16"
                         FontFamily="JetBrainsMono Nerd Font"
                          Foreground="Gold"
                         Text="D10"/>
            </StackPanel>
          </Button>
        </Border>
        <Border Grid.Column="4" Margin="10,0,0,0"  Width="87" Height="100" CornerRadius="10" Background="DarkGreen">
          <Button Width="85" Margin="0, 0, 5,5" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="MediumSeaGreen">
            <StackPanel>
              <Image Source="avares://DiceRoller/Assets/d12.png" Width="64" Height="64"/>
              <TextBlock HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontSize="16"
                         FontFamily="JetBrainsMono Nerd Font"
                          Foreground="Gold"
                         Text="D12"/>
            </StackPanel>
          </Button>
        </Border>
        <Border Grid.Column="5" Margin="10,0,0,0"  Width="87" Height="100" CornerRadius="10" Background="DarkGreen">
          <Button Width="85" Margin="0, 0, 5,5" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="MediumSeaGreen">
            <StackPanel>
              <Image Source="avares://DiceRoller/Assets/dice-twenty-faces-twenty.png" Width="64" Height="64"/>
              <TextBlock HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontSize="16"
                         FontFamily="JetBrainsMono Nerd Font"
                          Foreground="Gold"
                         Text="D20"/>
            </StackPanel>
          </Button>
        </Border>
      </Grid>
    </Border>
  </StackPanel>

</Window>
